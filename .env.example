# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/nexo_ai

# Supabase (opcional - se usar Supabase)
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGci...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGci...

# Telegram Bot API (PADRÃO)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_WEBHOOK_SECRET=seu_secret_opcional

# Meta WhatsApp Business API (OPCIONAL)
# META_WHATSAPP_TOKEN=EAAxxxx
# META_WHATSAPP_PHONE_NUMBER_ID=123456789012345
# META_VERIFY_TOKEN=seu_token_secreto_aqui
# META_BUSINESS_ACCOUNT_ID=123456789012345

# AI Providers (pelo menos 1 deve estar configurado)
# Default: Google Gemini (mais rápido e barato)
GOOGLE_API_KEY=AIzaSyXXXX

# Fallback: Anthropic Claude (mais sofisticado, opcional)
# ANTHROPIC_API_KEY=sk-ant-api03-xxxx

# Enrichment APIs
TMDB_API_KEY=xxxx
YOUTUBE_API_KEY=AIzaSyXXXX

# Cache - Upstash Redis (OBRIGATÓRIO para queue de fechamento de conversas)
# Opção 1: URL completa do Upstash
UPSTASH_REDIS_URL=redis://:your-token@us1-cod-12345.upstash.io:6379

# Opção 2: Detalhado (extrai do URL acima automaticamente)
REDIS_HOST=us1-cod-12345.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your-token-here
REDIS_TLS=true

# Observability - New Relic (opcional)
# NEW_RELIC_LICENSE_KEY=eu01xxNRAL-xxxxxxxxxxxxxxxxxxxxxxxx
# NEW_RELIC_APP_NAME=nexo-ai

# App
NODE_ENV=development
APP_URL=http://localhost:3000
PORT=3000
LOG_LEVEL=info
