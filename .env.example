# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@host:5432/database"

# ============================================
# MESSAGING PROVIDERS
# ============================================

# Telegram Bot API (OBRIGATÓRIO)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz123456789
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret
TELEGRAM_BOT_USERNAME=YourBot_bot

# Meta WhatsApp Business API (OPCIONAL)
META_WHATSAPP_TOKEN=your-meta-token
META_WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
META_VERIFY_TOKEN=your-verify-token
META_BUSINESS_ACCOUNT_ID=your-business-account-id

# Discord (OPCIONAL)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_BOT_TOKEN=your-discord-bot-token

# ============================================
# AI PROVIDERS (pelo menos 1 obrigatório)
# ============================================

# Google Gemini (RECOMENDADO - mais rápido e barato)
GOOGLE_API_KEY=your-google-api-key

# Cloudflare Workers AI (OBRIGATÓRIO - fallback)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_GATEWAY_ID=nexo-ai-gateway

# ============================================
# ENRICHMENT APIs
# ============================================

# TMDB - Para filmes e séries
TMDB_API_KEY=your-tmdb-api-key
TMDB_READ_KEY=your-tmdb-read-access-token

# YouTube - Para vídeos
YOUTUBE_API_KEY=your-youtube-api-key

# ============================================
# CACHE & QUEUE (OBRIGATÓRIO)
# ============================================

# Redis - Para Bull queue
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_USER=default
REDIS_TLS=false

# Upstash Redis (OPCIONAL - cache adicional)
UPSTASH_REDIS_URL=your-upstash-redis-url
UPSTASH_REDIS_TOKEN=your-upstash-redis-token

# ============================================
# AUTHENTICATION
# ============================================

# Better Auth
BETTER_AUTH_SECRET=generate-with-openssl-rand-base64-32
BETTER_AUTH_URL=http://localhost:3001/api/auth

# ============================================
# EMAIL (OPCIONAL)
# ============================================

# Resend - Para confirmação de email
RESEND_API_KEY=re_your-resend-api-key

# ============================================
# OBSERVABILITY (OPCIONAL)
# ============================================

# OpenTelemetry - Tracing distribuído (RECOMENDADO)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=nexo-ai-api

# Langfuse - AI Observability (OPCIONAL)
LANGFUSE_PUBLIC_KEY=pk-xxx
LANGFUSE_SECRET_KEY=sk-xxx
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# Sentry - Error tracking (OPCIONAL)
SENTRY_DSN=https://xxx@sentry.io/xxx
SENTRY_ENVIRONMENT=${NODE_ENV}
SENTRY_TRACES_SAMPLE_RATE=0.1

# Uptrace
UPTRACE_DSN=your-uptrace-dsn

# ============================================
# APPLICATION CONFIG
# ============================================

NODE_ENV=development
LOG_LEVEL=debug

# Ports
PORT=3001                    # API Backend
PORT_DASHBOARD=5173          # Dashboard Nuxt
PORT_LANDING=3005            # Landing Vite

# URLs
APP_URL=http://localhost:3001
DASHBOARD_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# Nuxt Dashboard - Public vars (exposed to client-side)
NUXT_PUBLIC_AUTH_BASE_URL=http://localhost:3001
NUXT_PUBLIC_API_URL=http://localhost:3001
