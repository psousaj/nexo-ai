{
    "name": "nexo-ai",
    "version": "0.3.12",
    "description": "Assistente pessoal via WhatsApp com IA",
    "type": "module",
    "scripts": {
        "dev": "bun --watch src/index.ts",
        "build": "bun build src/index.ts --outdir dist --target bun --format esm --minify --sourcemap",
        "build:binary": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/index.ts",
        "start": "bun run dist/index.js",
        "start:binary": "./server",
        "db:generate": "drizzle-kit generate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "test": "bun test",
        "lint": "tsc --noEmit",
        "merge-pr": "bash ./scripts/merge-pr.sh"
    },
    "dependencies": {
        "@elysiajs/cors": "^1.1.1",
        "@elysiajs/cron": "^1.4.1",
        "@elysiajs/openapi": "^1.4.13",
        "@elysiajs/opentelemetry": "^1.4.10",
        "@google/generative-ai": "^0.24.1",
        "@opentelemetry/exporter-trace-otlp-proto": "^0.209.0",
        "@opentelemetry/sdk-trace-node": "^2.3.0",
        "@toon-format/toon": "^2.1.0",
        "@types/bull": "^4.10.4",
        "@upstash/redis": "^1.36.1",
        "bull": "^4.16.5",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "elysia": "^1.1.33",
        "openai": "^6.16.0",
        "pg": "^8.16.3",
        "pino": "^10.1.1",
        "pino-pretty": "^13.1.3",
        "postgres": "^3.4.7",
        "sentiment": "^5.0.2",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/bun": "^1.3.5",
        "@types/node": "^20.11.0",
        "@types/pg": "^8.16.0",
        "@types/sentiment": "^5.0.4",
        "drizzle-kit": "^0.31.8",
        "typescript": "^5.9.3"
    }
}
