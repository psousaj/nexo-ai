{
    "name": "nexo-ai",
    "version": "0.4.11",
    "description": "Assistente pessoal via WhatsApp com IA",
    "type": "module",
    "scripts": {
        "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
        "build": "tsup",
        "build:binary": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/index.ts",
        "start": "cross-env NODE_ENV=production node --experimental-loader=newrelic/esm-loader.mjs dist/index.js",
        "start:no-newrelic": "cross-env NODE_ENV=production node dist/index.js",
        "start:binary": "./server",
        "db:generate": "drizzle-kit generate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "test": "cross-env NODE_ENV=test tsx node_modules/.bin/vitest run",
        "test:watch": "cross-env NODE_ENV=test tsx node_modules/.bin/vitest",
        "test:ui": "cross-env NODE_ENV=test tsx node_modules/.bin/vitest --ui",
        "biome:check": "biome format ./src",
        "biome:fix": "biome format ./src --write",
        "merge-pr": "bash ./scripts/merge-pr.sh",
        "train:nexo": "cross-env NODE_ENV=development tsx -r dotenv/config src/services/message-analysis/training/nexo-trainer.ts",
        "train:nexo:bert": "cross-env NODE_ENV=development tsx -r dotenv/config src/services/message-analysis/training/nexo-trainer.ts --bert"
    },
    "dependencies": {
        "@bull-board/api": "^6.16.2",
        "@bull-board/hono": "^6.16.2",
        "@google/generative-ai": "^0.24.1",
        "@hono/node-server": "^1.13.7",
        "@hono/zod-validator": "^0.7.6",
        "@toon-format/toon": "^2.1.0",
        "@types/bull": "^4.10.4",
        "ai": "^6.0.41",
        "better-auth": "^1.4.17",
        "bull": "^4.16.5",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "hono": "^4.6.14",
        "ioredis": "^5.9.2",
        "newrelic": "^13.10.0",
        "node-cron": "^3.0.3",
        "node-nlp": "5.0.0-alpha.5",
        "openai": "^6.16.0",
        "pg": "^8.16.3",
        "pino": "^10.1.1",
        "pino-pretty": "^13.1.3",
        "postgres": "^3.4.7",
        "resend": "^6.8.0",
        "sentiment": "^5.0.2",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@types/bun": "^1.1.14",
        "@types/newrelic": "^9.14.8",
        "@types/node": "^20.19.30",
        "@types/node-cron": "^3.0.11",
        "@types/pg": "^8.16.0",
        "@types/sentiment": "^5.0.4",
        "biome": "^0.3.3",
        "cross-env": "^10.1.0",
        "drizzle-kit": "^0.31.8",
        "tsc": "^2.0.4",
        "tsup": "^7.3.0",
        "tsx": "^4.19.2",
        "typescript": "^5.9.3",
        "vitest": "^2.1.8"
    }
}
