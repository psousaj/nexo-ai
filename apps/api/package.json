{
	"name": "@nexo/api",
	"version": "0.5.20",
	"description": "Assistente pessoal via WhatsApp com IA",
	"type": "module",
	"scripts": {
		"dev": "tsx -r dotenv/config --env-file=../../.env src/index.ts",
		"build": "tsup",
		"start": "NODE_ENV=production node dist/index.js",
		"start:binary": "./server",
		"db:generate": "drizzle-kit generate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"test": "vitest --config vitest.config.ts",
		"test:watch": "vitest --config vitest.config.ts --watch",
		"test:ui": "vitest --ui",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint:biome": "biome check .",
		"lint:biome:fix": "biome check --write .",
		"train:nexo": "tsx -r dotenv/config src/services/message-analysis/training/nexo-trainer.ts",
		"train:nexo:bert": "tsx -r dotenv/config src/services/message-analysis/training/nexo-trainer.ts --bert",
		"set-admin": "tsx scripts/set-admin.ts"
	},
	"dependencies": {
		"@bull-board/api": "^6.16.4",
		"@bull-board/hono": "^6.16.4",
		"@bull-board/ui": "^6.16.4",
		"@google/generative-ai": "^0.24.1",
		"@hono/node-server": "^1.19.9",
		"@hono/swagger-ui": "^0.5.3",
		"@hono/zod-validator": "^0.7.6",
		"@nexo/env": "workspace:*",
		"@nexo/otel": "workspace:*",
		"@nexo/shared": "workspace:*",
		"@scalar/hono-api-reference": "^0.9.37",
		"@sentry/node": "^10.39.0",
		"@sentry/profiling-node": "^10.39.0",
		"@toon-format/toon": "^2.1.0",
		"@whiskeysockets/baileys": "7.0.0-rc.9",
		"ai": "^6.0.49",
		"better-auth": "^1.4.17",
		"bull": "^4.16.5",
		"chrono-node": "^2.9.0",
		"discord.js": "^14.25.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"google-auth-library": "^10.5.0",
		"googleapis": "^171.4.0",
		"handlebars": "^4.7.8",
		"hono": "^4.11.5",
		"ioredis": "^5.9.2",
		"langfuse": "^3.0.0",
		"node-cron": "^3.0.3",
		"node-nlp": "5.0.0-alpha.5",
		"openai": "^6.16.0",
		"pg": "^8.17.2",
		"pino": "^10.3.0",
		"pino-pretty": "^13.1.3",
		"postgres": "^3.4.8",
		"resend": "^6.8.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@nexo/eslint-config": "workspace:*",
		"@nexo/prettier-config": "workspace:*",
		"@nexo/typescript-config": "workspace:*",
		"@sentry/esbuild-plugin": "^4.9.1",
		"@types/handlebars": "^4.1.0",
		"@types/node": "^20.19.30",
		"@types/node-cron": "^3.0.11",
		"@types/pg": "^8.16.0",
		"cross-env": "^10.1.0",
		"drizzle-kit": "^0.31.8",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^2.1.9"
	},
	"pnpm": {
		"neverBuiltDependencies": [
			"msgpackr-extract"
		]
	}
}
